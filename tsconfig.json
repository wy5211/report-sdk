{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "declaration": true,
    "declarationDir": "types",
    "outDir": "dist",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
    }
  },
  "include": [
    "./src/"
  ],
  "exclude": [
    "node_modules",
    "template"
  ],
}